<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- ELECTRIC VEHICLE TYPES ONLY (Bangladesh Context) -->
    
    <!-- Electric Motorcycle (Most common) -->
    <vType id="eBike" accel="1.2" decel="4.5" sigma="0.8" 
           length="2.0" maxSpeed="19.44" color="0.9,0.3,0.9" 
           minGap="0.5" tau="0.9" speedFactor="1.05" 
           emissionClass="Energy/unknown"/>
    
    <!-- Electric Rickshaw (E-Rickshaw) -->
    <vType id="eRickshaw" accel="0.6" decel="2.5" sigma="0.7" 
           length="3.2" maxSpeed="6.94" color="0,0.9,0" 
           minGap="0.8" tau="2.0" speedFactor="0.8" 
           emissionClass="Energy/unknown"/>
    
    <!-- Electric CNG (Battery Auto-rickshaw) -->
    <vType id="eCNG" accel="0.8" decel="3.5" sigma="0.7" 
           length="3.5" maxSpeed="10.00" color="0.9,0.9,0" 
           minGap="1.0" tau="1.4" speedFactor="0.85" 
           emissionClass="Energy/unknown"/>
    
    <!-- Electric Private Car -->
    <vType id="eCar" accel="1.0" decel="4.5" sigma="0.6" 
           length="4.5" maxSpeed="16.67" color="0.2,0.8,0.2" 
           minGap="1.8" tau="1.3" speedFactor="0.9" 
           emissionClass="Energy/unknown"/>
    
    <!-- Electric Bus -->
    <vType id="eBus" accel="0.6" decel="3.5" sigma="0.5" 
           length="12.0" maxSpeed="13.89" color="0.2,0.2,0.9" 
           minGap="2.5" tau="2.5" speedFactor="0.75" 
           emissionClass="Energy/unknown"/>
    
    <!-- Electric Truck/Van -->
    <vType id="eTruck" accel="0.5" decel="3.0" sigma="0.4" 
           length="8.0" maxSpeed="13.89" color="0.6,0.6,0.6" 
           minGap="3.0" tau="3.0" speedFactor="0.7" 
           emissionClass="Energy/unknown"/>

    <!-- ROUTES (Based on your network topology) -->
    
    <!-- Main arterial route: N1 → N2 → N3 → N4 → N13 -->
    <route id="main_arterial" edges="E0 E1 E2 E3"/>
    
    <!-- Alternative route via N5: N1 → N5 → N6 → N2 → N3 → N4 → N13 -->
    <route id="via_n5_route" edges="E4 E11 E10 E1 E2 E3"/>
    
    <!-- Southern route via N7-N8: N1 → N5 → N7 → N8 → N12 → N13 -->
    <route id="southern_route" edges="E4 E17 E18 E14 E15"/>

    <!-- ELECTRIC VEHICLES WITH LEFT-HAND DRIVING -->
    
    <!-- Electric Motorcycles (60% of traffic in Bangladesh) -->
    <vehicle id="ebike01" type="eBike" route="main_arterial" depart="0" departLane="0"/>
    <vehicle id="ebike02" type="eBike" route="via_n5_route" depart="2" departLane="0"/>
    <vehicle id="ebike03" type="eBike" route="main_arterial" depart="4" departLane="0"/>
    <vehicle id="ebike04" type="eBike" route="via_n5_route" depart="6" departLane="0"/>
    <vehicle id="ebike05" type="eBike" route="southern_route" depart="8" departLane="0"/>
    <vehicle id="ebike06" type="eBike" route="main_arterial" depart="10" departLane="0"/>
    <vehicle id="ebike07" type="eBike" route="via_n5_route" depart="12" departLane="0"/>
    
    <!-- Electric Rickshaws (E-Rickshaw) -->
    <vehicle id="erickshaw01" type="eRickshaw" route="via_n5_route" depart="5" departLane="0"/>
    <vehicle id="erickshaw02" type="eRickshaw" route="via_n5_route" depart="15" departLane="0"/>
    <vehicle id="erickshaw03" type="eRickshaw" route="via_n5_route" depart="25" departLane="0"/>
    <vehicle id="erickshaw04" type="eRickshaw" route="via_n5_route" depart="35" departLane="0"/>
    
    <!-- Electric CNGs -->
    <vehicle id="ecng01" type="eCNG" route="main_arterial" depart="7" departLane="0"/>
    <vehicle id="ecng02" type="eCNG" route="via_n5_route" depart="17" departLane="0"/>
    <vehicle id="ecng03" type="eCNG" route="southern_route" depart="27" departLane="0"/>
    <vehicle id="ecng04" type="eCNG" route="main_arterial" depart="37" departLane="0"/>
    
    <!-- Electric Cars -->
    <vehicle id="ecar01" type="eCar" route="main_arterial" depart="14" departLane="0"/>
    <vehicle id="ecar02" type="eCar" route="via_n5_route" depart="24" departLane="0"/>
    <vehicle id="ecar03" type="eCar" route="southern_route" depart="34" departLane="0"/>
    <vehicle id="ecar04" type="eCar" route="main_arterial" depart="44" departLane="0"/>
    
    <!-- Electric Buses -->
    <vehicle id="ebus01" type="eBus" route="main_arterial" depart="20" departLane="0"/>
    <vehicle id="ebus02" type="eBus" route="via_n5_route" depart="40" departLane="0"/>
    <vehicle id="ebus03" type="eBus" route="main_arterial" depart="60" departLane="0"/>
    
    <!-- Electric Trucks/Vans -->
    <vehicle id="etruck01" type="eTruck" route="southern_route" depart="30" departLane="0"/>
    <vehicle id="etruck02" type="eTruck" route="main_arterial" depart="50" departLane="0"/>

    <!-- CONTINUOUS ELECTRIC TRAFFIC FLOWS -->
    
    <!-- Electric motorcycle flows (dominant in Bangladesh) -->
    <flow id="ebike_flow_main" type="eBike" route="main_arterial" 
          begin="65" end="100" vehsPerHour="200" departLane="0"/>
    <flow id="ebike_flow_alt" type="eBike" route="via_n5_route" 
          begin="65" end="100" vehsPerHour="150" departLane="0"/>
    <flow id="ebike_flow_south" type="eBike" route="southern_route" 
          begin="65" end="100" vehsPerHour="100" departLane="0"/>
    
    <!-- Electric rickshaw flows -->
    <flow id="erickshaw_flow" type="eRickshaw" route="via_n5_route" 
          begin="70" end="100" vehsPerHour="80" departLane="0"/>
    
    <!-- Electric CNG flows -->
    <flow id="ecng_flow_main" type="eCNG" route="main_arterial" 
          begin="72" end="100" vehsPerHour="90" departLane="0"/>
    <flow id="ecng_flow_alt" type="eCNG" route="via_n5_route" 
          begin="72" end="100" vehsPerHour="60" departLane="0"/>
    
    <!-- Electric car flows -->
    <flow id="ecar_flow_main" type="eCar" route="main_arterial" 
          begin="75" end="100" vehsPerHour="70" departLane="0"/>
    <flow id="ecar_flow_alt" type="eCar" route="via_n5_route" 
          begin="75" end="100" vehsPerHour="50" departLane="0"/>
    
    <!-- Electric bus flows -->
    <flow id="ebus_flow" type="eBus" route="main_arterial" 
          begin="80" end="100" vehsPerHour="25" departLane="0"/>
    
    <!-- Electric truck flows -->
    <flow id="etruck_flow" type="eTruck" route="southern_route" 
          begin="85" end="100" vehsPerHour="20" departLane="0"/>

</routes>